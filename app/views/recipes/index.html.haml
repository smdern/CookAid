%h1 Recipes
%table{:class => "table table-striped"}
  %thead
    %tr
      %th ID
      %th
        = t("activerecord.attributes.recipe.name", :default => t("activerecord.labels.name", :default => "Name"))
      %th Created at
      %th Actions
  %tbody
    - @recipes.each do |recipe|
      %tr
        %td= recipe.id
        %td= link_to recipe.name, recipe_path(recipe)
        %td= recipe.created_at
        %td
          = link_to "Show", recipe_path(recipe)
          = link_to "Edit", edit_recipe_path(recipe)
          = link_to "Destroy", recipe_path(recipe), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"

= link_to "New", new_recipe_path, :class => 'btn btn-primary'
