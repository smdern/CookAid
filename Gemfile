  gem 'sass-rails',   '~> 3.2.2'
  gem "coffee-rails", "~> 3.2.2"
  gem "compass"
  gem 'compass-rails'
  gem 'bootstrap-sass'
  gem 'uglifier'
  gem 'font-awesome-sass-rails'
end

group :development do
  gem 'haml-rails'
  gem 'rb-fsevent'
  gem 'growl'
  gem 'guard'
  gem 'guard-rails'
  gem 'guard-livereload'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'guard-pow'
end

group :development, :test do
  gem 'rspec-rails'
end

group :test do
  gem 'factory_girl_rails'
end

gem 'jquery-rails'
